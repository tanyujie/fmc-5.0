<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paradisecloud.fcm.dao.mapper.BusiConferenceQuestionMapper">

    <resultMap type="BusiConferenceQuestion" id="BusiConferenceQuestionResult">
        <result property="questionId"    column="question_id"    />
        <result property="questionnaireId"    column="questionnaire_id"    />
        <result property="content"    column="content"    />
        <result property="type"    column="type"    />
        <result property="sortNum"    column="sort_num"    />
    </resultMap>

    <sql id="selectBusiConferenceQuestionVo">
        select question_id, questionnaire_id, content, type, sort_num, create_time from busi_conference_question
    </sql>

    <select id="selectBusiConferenceQuestionList" parameterType="BusiConferenceQuestion" resultMap="BusiConferenceQuestionResult">
        <include refid="selectBusiConferenceQuestionVo"/>
        <where>
            <if test="questionnaireId != null "> and questionnaire_id = #{questionnaireId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="sortNum != null "> and sort_num = #{sortNum}</if>
        </where>
    </select>

    <select id="selectBusiConferenceQuestionById" parameterType="Long" resultMap="BusiConferenceQuestionResult">
        <include refid="selectBusiConferenceQuestionVo"/>
        where question_id = #{questionId}
    </select>

    <insert id="insertBusiConferenceQuestion" parameterType="BusiConferenceQuestion" useGeneratedKeys="true" keyProperty="questionId">
        insert into busi_conference_question
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionnaireId != null">questionnaire_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="type != null">type,</if>
            <if test="sortNum != null">sort_num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionnaireId != null">#{questionnaireId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="type != null">#{type},</if>
            <if test="sortNum != null">#{sortNum},</if>
        </trim>
    </insert>

    <update id="updateBusiConferenceQuestion" parameterType="BusiConferenceQuestion">
        update busi_conference_question
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionnaireId != null">questionnaire_id = #{questionnaireId},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="type != null">type = #{type},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
        </trim>
        where question_id = #{questionId}
    </update>

    <delete id="deleteBusiConferenceQuestionById" parameterType="Long">
        delete from busi_conference_question where question_id = #{questionId}
    </delete>

    <delete id="deleteBusiConferenceQuestionByIds" parameterType="String">
        delete from busi_conference_question where question_id in
        <foreach item="questionId" collection="array" open="(" separator="," close=")">
            #{questionId}
        </foreach>
    </delete>
    <!-- 根据状态查询投票 -->
    <select id="selectByQuestionnaireId" parameterType="Long" resultMap="BusiConferenceQuestionResult">
        SELECT
        *
        from busi_conference_question
        WHERE questionnaire_id=#{conferenceId}
        ORDER BY sort_num DESC
    </select>
</mapper>