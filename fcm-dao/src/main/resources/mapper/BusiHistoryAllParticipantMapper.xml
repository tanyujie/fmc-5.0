    <sql id="selectBusiHistoryAllParticipantVo">
        select id, create_time, update_time, history_conference_id, weight,co_space, call_id, call_leg_id, remote_party, name, join_time, outgoing_time,duration_seconds,joined,media_info from busi_history_all_participant
    </sql>

    <select id="selectBusiHistoryAllParticipantList" parameterType="BusiHistoryAllParticipant" resultMap="BusiHistoryAllParticipantResult">
        <include refid="selectBusiHistoryAllParticipantVo"/>
        <where>  
            <if test="historyConferenceId != null "> and history_conference_id = #{historyConferenceId}</if>
            <if test="coSpace != null "> and co_space = #{coSpace}</if>
            <if test="weight != null "> and weight = #{weight}</if>
            <if test="remoteParty != null  and remoteParty != ''"> and remote_party = #{remoteParty}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="joinTime != null "> and join_time = #{joinTime}</if>
            <if test="outgoingTime != null "> and outgoing_time = #{outgoingTime}</if>
            <if test="durationSeconds != null"> and duration_seconds = #{durationSeconds}</if>
            <if test="joined != null"> and joined = #{joined}</if>
        </where>
    </select>
    
    <select id="selectNotEndHistoryParticipantList" resultMap="BusiHistoryAllParticipantResult">
        <include refid="selectBusiHistoryAllParticipantVo"/>
        <where>  
           joined = true and outgoing_time is null 
        </where>
    </select>
    
    <select id="selectBusiHistoryAllParticipantById" parameterType="Long" resultMap="BusiHistoryAllParticipantResult">
        <include refid="selectBusiHistoryAllParticipantVo"/>
        where id = #{id}
    </select>
    
    <select id="selectBusiHistoryAllParticipantByCallLegId" parameterType="String" resultMap="BusiHistoryAllParticipantResult">
        <include refid="selectBusiHistoryAllParticipantVo"/>
        where call_leg_id = #{callLegId}
    </select>
        
    <insert id="insertBusiHistoryAllParticipant" parameterType="BusiHistoryAllParticipant" useGeneratedKeys="true" keyProperty="id">
