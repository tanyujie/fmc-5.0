            <if test="joinTime != null">#{joinTime},</if>
            <if test="outgoingTime != null">#{outgoingTime},</if>
            <if test="durationSeconds != null">#{durationSeconds},</if>
            <if test="joined != null">#{joined},</if>
            <if test="mediaInfo != null">#{mediaInfo, typeHandler=com.paradisecloud.fcm.dao.typehandler.JSONTypeMapHandler},</if>
         </trim>
    </insert>

    <update id="updateBusiHistoryAllParticipant" parameterType="BusiHistoryAllParticipant">
        update busi_history_all_participant
        <trim prefix="SET" suffixOverrides=",">
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="historyConferenceId != null">history_conference_id = #{historyConferenceId},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="coSpace != null">co_space = #{coSpace},</if>
            <if test="callId != null">call_id = #{callId},</if>
            <if test="callLegId != null">call_leg_id = #{callLegId},</if>
            <if test="remoteParty != null">remote_party = #{remoteParty},</if>
            <if test="name != null">name = #{name},</if>
            <if test="joinTime != null">join_time = #{joinTime},</if>
            <if test="outgoingTime != null">outgoing_time = #{outgoingTime},</if>
            <if test="durationSeconds != null">duration_seconds = #{durationSeconds},</if>
            <if test="joined != null">joined = #{joined},</if>
            <if test="mediaInfo != null">media_info = #{mediaInfo, typeHandler=com.paradisecloud.fcm.dao.typehandler.JSONTypeMapHandler},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusiHistoryAllParticipantById" parameterType="Long">
        delete from busi_history_all_participant where id = #{id}
    </delete>

    <delete id="deleteBusiHistoryAllParticipantByIds" parameterType="String">
        delete from busi_history_all_participant where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 批量添加记录 -->
    <insert id="batchInsertBusiHistoryAllParticipant" parameterType="BusiHistoryAllParticipant" useGeneratedKeys="true" keyProperty="id">
        insert into busi_history_all_participant (create_time,update_time,history_conference_id,weight,call_id,call_leg_id) values
        <foreach collection="BusiHistoryAllParticipantList" item="BusiHistoryAllParticipant" separator=",">
            (#{BusiHistoryAllParticipant.createTime},#{BusiHistoryAllParticipant.updateTime},#{BusiHistoryAllParticipant.historyConferenceId},#{BusiHistoryAllParticipant.weight},
            #{BusiHistoryAllParticipant.callId},#{BusiHistoryAllParticipant.callLegId})
