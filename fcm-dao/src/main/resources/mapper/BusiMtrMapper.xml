            <if test="deleteTime != null "> and delete_time = #{deleteTime}</if>
        </where>
    </select>

    <select id="selectBusiMtrListForLongNotEnd" resultMap="BusiMtrResult">
        <include refid="selectBusiMtrVo"/>
        where status = 0
            and times <![CDATA[>]]> 10
            and delete_time is null
        order by id
        limit 10
    </select>

    <select id="selectBusiMtrListForShortNotEnd" resultMap="BusiMtrResult">
        <include refid="selectBusiMtrVo"/>
        where status = 0
            and times <![CDATA[<=]]> 10
