    <sql id="selectBusiMtrVo">
        select id, source_ip, target_ip, times, file_name, pid, status, name, create_by, create_time, update_time, delete_time from busi_mtr
    </sql>

    <select id="selectBusiMtrList" parameterType="BusiMtr" resultMap="BusiMtrResult">
        <include refid="selectBusiMtrVo"/>
