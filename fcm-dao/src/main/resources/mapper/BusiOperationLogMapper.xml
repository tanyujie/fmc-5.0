    <sql id="selectBusiOperationLogVo">
        select id, user_id, operator_name, time, action_details, action_result, ip, device_type, history_conference_id from busi_operation_log
    </sql>

    <select id="selectBusiOperationLogList" parameterType="BusiOperationLog" resultMap="BusiOperationLogResult">
