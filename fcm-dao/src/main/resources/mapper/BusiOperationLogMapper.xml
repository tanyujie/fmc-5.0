        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="operatorName != null  and operatorName != ''"> and operator_name like concat('%', #{operatorName}, '%')</if>
            <if test="time != null "> and time = #{time}</if>
            <if test="actionDetails != null  and actionDetails != ''"> and action_details = #{actionDetails}</if>
            <if test="actionResult != null "> and action_result = #{actionResult}</if>
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="deviceType != null  and deviceType != ''"> and device_type = #{deviceType}</if>
            <if test="historyConferenceId != null "> and history_conference_id = #{historyConferenceId}</if>
            <if test="startTime != null "> and time <![CDATA[>=]]> #{startTime}</if>
            <if test="endTime != null "> and time <![CDATA[<=]]> #{endTime}</if>
        </where>
        order by time ${sort}
