<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paradisecloud.fcm.dao.mapper.BusiProfileDtmfMapper">
    
    <resultMap type="BusiProfileDtmf" id="BusiProfileDtmfResult">
        <result property="id"    column="id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="dtmfProfileUuid"    column="dtmf_profile_uuid"    />
        <result property="name"    column="name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="isDefault"    column="is_default"    />
    </resultMap>

    <sql id="selectBusiProfileDtmfVo">
        select id, create_time, update_time, dtmf_profile_uuid, name, dept_id, is_default from busi_profile_dtmf
    </sql>
    
    <resultMap type="DeptRecordCount" id="DeptRecordCountMap">
        <result property="deptId"    column="dept_id"    />
        <result property="count"    column="ct"    />
    </resultMap>
    
    <select id="getDeptRecordCounts" resultMap="DeptRecordCountMap">
        SELECT
        	a.dept_id,
        	count(*) ct 
        FROM
        	busi_profile_dtmf a
        GROUP BY
        	a.dept_id 
        ORDER BY
        	a.dept_id ASC
    </select>

    <select id="selectBusiProfileDtmfList" parameterType="BusiProfileDtmf" resultMap="BusiProfileDtmfResult">
        <include refid="selectBusiProfileDtmfVo"/>
        <where>  
            <if test="dtmfProfileUuid != null  and dtmfProfileUuid != ''"> and dtmf_profile_uuid = #{dtmfProfileUuid}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="isDefault != null "> and is_default = #{isDefault}</if>
        </where>
    </select>
    
    <select id="selectBusiProfileDtmfById" parameterType="Long" resultMap="BusiProfileDtmfResult">
        <include refid="selectBusiProfileDtmfVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusiProfileDtmf" parameterType="BusiProfileDtmf" useGeneratedKeys="true" keyProperty="id">
        insert into busi_profile_dtmf
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="dtmfProfileUuid != null">dtmf_profile_uuid,</if>
            <if test="name != null">name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="isDefault != null">is_default,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="dtmfProfileUuid != null">#{dtmfProfileUuid},</if>
            <if test="name != null">#{name},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="isDefault != null">#{isDefault},</if>
         </trim>
    </insert>

    <update id="updateBusiProfileDtmf" parameterType="BusiProfileDtmf">
        update busi_profile_dtmf
        <trim prefix="SET" suffixOverrides=",">
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="dtmfProfileUuid != null">dtmf_profile_uuid = #{dtmfProfileUuid},</if>
            <if test="name != null">name = #{name},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusiProfileDtmfById" parameterType="Long">
        delete from busi_profile_dtmf where id = #{id}
    </delete>

    <delete id="deleteBusiProfileDtmfByIds" parameterType="String">
        delete from busi_profile_dtmf where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>