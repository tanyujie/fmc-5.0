<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paradisecloud.fcm.dao.mapper.BusiProfileCallBrandingMapper">
    
    <resultMap type="BusiProfileCallBranding" id="BusiProfileCallBrandingResult">
        <result property="id"    column="id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="callBrandingProfileUuid"    column="call_branding_profile_uuid"    />
        <result property="name"    column="name"    />
        <result property="deptId"    column="dept_id"    />
        <result property="isDefault"    column="is_default"    />
    </resultMap>

    <sql id="selectBusiProfileCallBrandingVo">
        select id, create_time, update_time, call_branding_profile_uuid, name, dept_id, is_default from busi_profile_call_branding
    </sql>
    
    <resultMap type="DeptRecordCount" id="DeptRecordCountMap">
        <result property="deptId"    column="dept_id"    />
        <result property="count"    column="ct"    />
    </resultMap>
    
    <select id="getDeptRecordCounts" resultMap="DeptRecordCountMap">
        SELECT
        	a.dept_id,
        	count(*) ct 
        FROM
        	busi_profile_call_branding a
        GROUP BY
        	a.dept_id 
        ORDER BY
        	a.dept_id ASC
    </select>  

    <select id="selectBusiProfileCallBrandingList" parameterType="BusiProfileCallBranding" resultMap="BusiProfileCallBrandingResult">
        <include refid="selectBusiProfileCallBrandingVo"/>
        <where>  
            <if test="callBrandingProfileUuid != null  and callBrandingProfileUuid != ''"> and call_branding_profile_uuid = #{callBrandingProfileUuid}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="isDefault != null "> and is_default = #{isDefault}</if>
        </where>
    </select>
    
    <select id="selectBusiProfileCallBrandingById" parameterType="Long" resultMap="BusiProfileCallBrandingResult">
        <include refid="selectBusiProfileCallBrandingVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusiProfileCallBranding" parameterType="BusiProfileCallBranding" useGeneratedKeys="true" keyProperty="id">
        insert into busi_profile_call_branding
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="callBrandingProfileUuid != null">call_branding_profile_uuid,</if>
            <if test="name != null">name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="isDefault != null">is_default,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="callBrandingProfileUuid != null">#{callBrandingProfileUuid},</if>
            <if test="name != null">#{name},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="isDefault != null">#{isDefault},</if>
         </trim>
    </insert>

    <update id="updateBusiProfileCallBranding" parameterType="BusiProfileCallBranding">
        update busi_profile_call_branding
        <trim prefix="SET" suffixOverrides=",">
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="callBrandingProfileUuid != null">call_branding_profile_uuid = #{callBrandingProfileUuid},</if>
            <if test="name != null">name = #{name},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusiProfileCallBrandingById" parameterType="Long">
        delete from busi_profile_call_branding where id = #{id}
    </delete>

    <delete id="deleteBusiProfileCallBrandingByIds" parameterType="String">
        delete from busi_profile_call_branding where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>