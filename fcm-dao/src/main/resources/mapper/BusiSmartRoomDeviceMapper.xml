            <if test="deviceModel != null">#{deviceModel},</if>
            <if test="appliedTime != null">#{appliedTime},</if>
            <if test="hardwareVersion != null">#{hardwareVersion},</if>
            <if test="softwareVersion != null">#{softwareVersion},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="lotId != null">#{lotId},</if>
            <if test="lotChannel != null">#{lotChannel},</if>
            <if test="lotDeviceType != null">#{lotDeviceType},</if>
            <if test="details != null">#{details, typeHandler=com.paradisecloud.fcm.dao.typehandler.JSONTypeMapHandler},</if>
            <if test="bindId != null">#{bindId},</if>
        </trim>
    </insert>

    <update id="updateBusiSmartRoomDevice" parameterType="BusiSmartRoomDevice">
        update busi_smart_room_device
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">device_name = #{deviceName},</if>
            <if test="deviceType != null">device_type = #{deviceType},</if>
            <if test="deviceClassify != null">device_classify = #{deviceClassify},</if>
            <if test="status != null">status = #{status},</if>
            <if test="onlineStatus != null">online_status = #{onlineStatus},</if>
            <if test="brand != null">brand = #{brand},</if>
            <if test="deviceModel != null">device_model = #{deviceModel},</if>
            <if test="appliedTime != null">applied_time = #{appliedTime},</if>
            <if test="hardwareVersion != null">hardware_version = #{hardwareVersion},</if>
            <if test="softwareVersion != null">software_version = #{softwareVersion},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="lotId != null">lot_id = #{lotId},</if>
            <if test="lotChannel != null">lot_channel = #{lotChannel},</if>
            <if test="lotDeviceType != null">lot_device_type = #{lotDeviceType},</if>
            details = #{details, typeHandler=com.paradisecloud.fcm.dao.typehandler.JSONTypeMapHandler},
            <if test="bindId != null">bind_id = #{bindId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusiSmartRoomDeviceById" parameterType="Long">
        delete from busi_smart_room_device where id = #{id}
    </delete>

    <delete id="deleteBusiSmartRoomDeviceByIds" parameterType="String">
        delete from busi_smart_room_device where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectBusiSmartRoomDeviceListForUnbind" parameterType="BusiSmartRoomDevice" resultMap="BusiSmartRoomDeviceResult">
        <include refid="selectBusiSmartRoomDeviceVo"/>
        where device_type > 10
        and device_type = #{deviceType}
        and not exists (select 1 from busi_smart_room_device_map srdp where srdp.device_type > 10 and srdp.device_id = busi_smart_room_device.id)
        and not exists (select 1 from busi_smart_room_device_map srdp, busi_smart_room_lot srl where srdp.device_type = 1 and srdp.device_id = srl.id and srl.id = busi_smart_room_device.lot_id)
    </select>

    <select id="selectBusiSmartRoomDeviceListForUnbindLotDevice" resultMap="BusiSmartRoomDeviceResult">
        <include refid="selectBusiSmartRoomDeviceVo"/>
        where device_type = 11
        and not exists (select 1 from busi_smart_room_device_map srdp where srdp.device_type = 11 and srdp.device_id = busi_smart_room_device.id)
        and not exists (select 1 from busi_smart_room_device_map srdp, busi_smart_room_lot srl where srdp.device_type = 1 and srdp.device_id = srl.id and srl.id = busi_smart_room_device.lot_id)
    </select>
