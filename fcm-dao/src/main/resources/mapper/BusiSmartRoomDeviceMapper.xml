<mapper namespace="com.paradisecloud.fcm.dao.mapper.BusiSmartRoomDeviceMapper">

    <resultMap type="BusiSmartRoomDevice" id="BusiSmartRoomDeviceResult">
        <result property="id"    column="id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceType"    column="device_type"    />
        <result property="deviceClassify"    column="device_classify"    />
        <result property="status"    column="status"    />
        <result property="onlineStatus"    column="online_status"    />
        <result property="brand"    column="brand"    />
        <result property="deviceModel"    column="device_model"    />
        <result property="appliedTime"    column="applied_time"    />
