    <sql id="selectBusiSmartRoomDeviceVo">
        select id, device_name, device_type, device_classify, status, online_status, brand, device_model, applied_time, hardware_version, software_version, remark, create_time, create_by, update_time, update_by, lot_id, lot_channel, lot_device_type, details, bind_id from busi_smart_room_device
    </sql>

    <select id="selectBusiSmartRoomDeviceList" parameterType="BusiSmartRoomDevice" resultMap="BusiSmartRoomDeviceResult">
        <include refid="selectBusiSmartRoomDeviceVo"/>
        <where>
            <if test="deviceName != null  and deviceName != ''"> and device_name like concat('%', #{deviceName}, '%')</if>
            <if test="deviceType != null "> and device_type = #{deviceType}</if>
            <if test="deviceClassify != null "> and device_classify = #{deviceClassify}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="onlineStatus != null "> and online_status = #{onlineStatus}</if>
            <if test="brand != null  and brand != ''"> and brand = #{brand}</if>
            <if test="deviceModel != null  and deviceModel != ''"> and device_model = #{deviceModel}</if>
            <if test="appliedTime != null "> and applied_time = #{appliedTime}</if>
            <if test="hardwareVersion != null  and hardwareVersion != ''"> and hardware_version = #{hardwareVersion}</if>
            <if test="softwareVersion != null  and softwareVersion != ''"> and software_version = #{softwareVersion}</if>
            <if test="lotId != null "> and lot_id = #{lotId}</if>
            <if test="lotChannel != null "> and lot_channel = #{lotChannel}</if>
            <if test="lotDeviceType != null "> and lot_device_type = #{lotDeviceType}</if>
            <if test="bindId != null "> and bind_id = #{bindId}</if>
        </where>
    </select>

    <select id="selectBusiSmartRoomDeviceById" parameterType="Long" resultMap="BusiSmartRoomDeviceResult">
        <include refid="selectBusiSmartRoomDeviceVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusiSmartRoomDevice" parameterType="BusiSmartRoomDevice" useGeneratedKeys="true" keyProperty="id">
        insert into busi_smart_room_device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="deviceName != null and deviceName != ''">device_name,</if>
            <if test="deviceType != null">device_type,</if>
            <if test="deviceClassify != null">device_classify,</if>
            <if test="status != null">status,</if>
            <if test="onlineStatus != null">online_status,</if>
            <if test="brand != null">brand,</if>
            <if test="deviceModel != null">device_model,</if>
            <if test="appliedTime != null">applied_time,</if>
            <if test="hardwareVersion != null">hardware_version,</if>
            <if test="softwareVersion != null">software_version,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="lotId != null">lot_id,</if>
            <if test="lotChannel != null">lot_channel,</if>
            <if test="lotDeviceType != null">lot_device_type,</if>
            <if test="details != null">details,</if>
            <if test="bindId != null">bind_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
            <if test="deviceType != null">#{deviceType},</if>
            <if test="deviceClassify != null">#{deviceClassify},</if>
