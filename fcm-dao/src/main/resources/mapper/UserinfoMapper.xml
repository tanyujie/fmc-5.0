<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paradisecloud.fcm.dao.mapper.UserinfoMapper">
    
    <resultMap type="Userinfo" id="UserinfoResult">
        <result property="id"    column="id"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />
    </resultMap>

    <sql id="selectUserinfoVo">
        select id, username, password from userinfo
    </sql>

    <select id="selectUserinfoList" parameterType="Userinfo" resultMap="UserinfoResult">
        <include refid="selectUserinfoVo"/>
        <where>  
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
        </where>
    </select>
    
    <select id="selectUserinfoById" parameterType="Integer" resultMap="UserinfoResult">
        <include refid="selectUserinfoVo"/>
        where id = #{id}
    </select>

    <select id="selectUserinfoByUsername" parameterType="String" resultMap="UserinfoResult">
        <include refid="selectUserinfoVo"/>
        where username = #{username}
        limit 1
    </select>

    <delete id="selectUserinfoByUsernames" parameterType="String">
        <include refid="selectUserinfoVo"/>
        where username in
        <foreach item="username" collection="array" open="(" separator="," close=")">
            #{username}
        </foreach>
    </delete>
        
    <insert id="insertUserinfo" parameterType="Userinfo" useGeneratedKeys="true" keyProperty="id">
        insert into userinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">username,</if>
            <if test="password != null">password,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">#{username},</if>
            <if test="password != null">#{password},</if>
         </trim>
    </insert>

    <update id="updateUserinfo" parameterType="Userinfo">
        update userinfo
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserinfoById" parameterType="Integer">
        delete from userinfo where id = #{id}
    </delete>

    <delete id="deleteUserinfoByIds" parameterType="String">
        delete from userinfo where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteUserinfoByUsername" parameterType="String">
        delete from userinfo where username = #{username}
    </delete>

    <delete id="deleteUserinfoByUsernames" parameterType="String">
        delete from userinfo where username in
        <foreach item="username" collection="array" open="(" separator="," close=")">
            #{username}
        </foreach>
    </delete>
</mapper>