    </delete>

    <delete id="deleteBusiProfileIvrBrandingByIds" parameterType="String">
        delete from busi_profile_ivr_branding where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
