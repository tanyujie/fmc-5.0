<mapper namespace="com.paradisecloud.fcm.dao.mapper.BusiProfileIvrBrandingMapper">
    
    <resultMap type="BusiProfileIvrBranding" id="BusiProfileIvrBrandingResult">
        <result property="id"    column="id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="ivrBrandingProfileUuid"    column="ivr_branding_profile_uuid"    />
