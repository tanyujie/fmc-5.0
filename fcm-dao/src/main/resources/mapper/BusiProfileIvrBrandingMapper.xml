        <result property="count"    column="ct"    />
    </resultMap>
    
    <select id="getDeptRecordCounts" resultMap="DeptRecordCountMap">
        SELECT
        	a.dept_id,
        	count(*) ct 
        FROM
        	busi_profile_ivr_branding a
        GROUP BY
        	a.dept_id 
        ORDER BY
        	a.dept_id ASC
    </select>

    <select id="selectBusiProfileIvrBrandingList" parameterType="BusiProfileIvrBranding" resultMap="BusiProfileIvrBrandingResult">
        <include refid="selectBusiProfileIvrBrandingVo"/>
        <where>  
            <if test="ivrBrandingProfileUuid != null  and ivrBrandingProfileUuid != ''"> and ivr_branding_profile_uuid = #{ivrBrandingProfileUuid}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="isDefault != null "> and is_default = #{isDefault}</if>
        </where>
    </select>
    
    <select id="selectBusiProfileIvrBrandingById" parameterType="Long" resultMap="BusiProfileIvrBrandingResult">
        <include refid="selectBusiProfileIvrBrandingVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusiProfileIvrBranding" parameterType="BusiProfileIvrBranding" useGeneratedKeys="true" keyProperty="id">
        insert into busi_profile_ivr_branding
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="ivrBrandingProfileUuid != null">ivr_branding_profile_uuid,</if>
            <if test="name != null">name,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="isDefault != null">is_default,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="ivrBrandingProfileUuid != null">#{ivrBrandingProfileUuid},</if>
            <if test="name != null">#{name},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="isDefault != null">#{isDefault},</if>
         </trim>
    </insert>

    <update id="updateBusiProfileIvrBranding" parameterType="BusiProfileIvrBranding">
        update busi_profile_ivr_branding
        <trim prefix="SET" suffixOverrides=",">
